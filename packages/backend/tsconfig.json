{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "./dist",

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,

        /* paths */
        "paths": {
            "@/*": ["./src/*"]
        },

        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
